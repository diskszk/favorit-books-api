{
  "compilerOptions": {
    // "lib": ["esnext"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",

    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/types"]
  }
}
